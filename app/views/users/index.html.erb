<div class="mt-5">
  <h1 class="d-flex flex-row fw-bold justify-content-center pt-4">Users</h1>
  <div class="border border-sm rounded m-5 p-5">
    <div class="px-5 mx-5">
      <table class="table table-responsive table-striped">
        <thead class="thead-dark bg-dark text-light align-text-center">
          <tr>
            <th class="p-4 fs-5">Email</th>
            <th class="p-4 fs-5">Name</th>
            <th class="p-4 fs-5">Age</th>
            <th class="p-4 fs-5">Location</th>
            <th class="p-4 fs-5">Noofcomplaintsmade</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="p-4 fs-6"><%= user.email %></td>
              <td class="p-4 fs-6"><%= user.name %></td>
              <td class="p-4 fs-6"><%= user.age %></td>
              <td class="p-4 fs-6"><%= user.location %></td>
              <td class="p-4 fs-6"><%= user.noOfComplaintsMade %></td>
              <td class="p-4 fs-6"><%= link_to 'Show', user %></td>
              <td class="p-4 fs-6"><%= link_to 'Edit', edit_user_path(user) %></td>
              <td class="p-4 fs-6"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New User', new_user_path , class: "btn btn-secondary text-light btn-lg"%>
    </div>
  <div>
</div>