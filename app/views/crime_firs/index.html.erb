<div class="mt-5">
  <h1 class="d-flex flex-row fw-bold justify-content-center pt-4">Crime FIR'S</h1>
  <div class="border border-sm rounded m-5 p-5">
    <div class="px-5 mx-5">
      <table class="table table-responsive table-striped">
        <thead class="thead-dark bg-dark text-light align-text-center">
          <tr>
            <th class="p-4 fs-5">User</th>
            <th class="p-4 fs-5">Under section</th>
            <th class="p-4 fs-5">Crime category</th>
            <th class="p-4 fs-5">Datetime of crime</th>
            <th class="p-4 fs-5">Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @crime_firs.each do |crime_fir| %>
            <tr>
              <td class="p-4 fs-6"><%= crime_fir.user.name %></td>
              <td class="p-4 fs-6"><%= crime_fir.under_section %></td>
              <td class="p-4 fs-6"><%= crime_fir.crime_category %></td>
              <td class="p-4 fs-6"><%= crime_fir.dateTime_of_crime %></td>
              <td class="p-4 fs-6"><% if crime_fir.status %><%= crime_fir.status.status %><% end %></td>
              <td class="p-4 fs-6"><%= link_to 'Show', crime_fir %></td>
              <td class="p-4 fs-6"><%= link_to 'Edit', edit_crime_fir_path(crime_fir) %></td>
              <td class="p-4 fs-6"><%= link_to 'Destroy', crime_fir, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <div>
</div>

