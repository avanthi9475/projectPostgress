<h1 class="d-flex flex-row fw-bold justify-content-center pt-4 pb-3">Sign In</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group p-2">
    <%= f.label :email, class: "form-label fw-bold fs-5 py-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow shadow-sm" %>
  </div>

  <div class="field form-group p-2">
    <%= f.label :password, class: "form-label fw-bold fs-5 py-2" %>
    <%= f.password_field :password, autocomplete: "current-password",  class: "form-control shadow shadow-sm"   %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field d-flex flex-row">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "px-2" %>
    </div>
  <% end %>

  <div class="actions d-flex pt-4 justify-content-center">
    <%= f.submit "Sign in", class: "btn btn-info text-light btn-lg mx-5 px-5" %>
  </div>

  <div class="actions d-flex pt-4 justify-content-between">
  <p class="fs-6">Don't Have an account: <%= link_to 'Sign Up', new_user_login_registration_path %></p>
  <p class="fs-6">Forgot Password: <%= link_to 'Reset Password', new_user_login_password_path %></p>
  </div>
<% end %>


