<div class="mt-5">
  <h1 class="d-flex flex-row fw-bold justify-content-center pt-4">Messages</h1>
  <div class="border border-sm rounded m-5 p-5">
    <div class="px-5 mx-5">
      <table class="table table-responsive table-striped">
        <thead class="thead-dark bg-dark text-light align-text-center">
          <tr>
            <th class="p-4 fs-5">Message</th>
            <th class="p-4 fs-5">Message type</th>
            <th class="p-4 fs-5">Complaint</th>
            <th class="p-4 fs-5">Statement</th>
            <th class="p-4 fs-5">Datetime</th>
            <% if @message && @message.message_type=="User" %>
              <th class="p-4 fs-5">Status</th>
            <% end %>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @messages.each do |message| %>
            <tr>
              <td class="p-4 fs-6"><%= message.message_id %></td>
              <td class="p-4 fs-6"><%= message.message_type %></td>
              <td class="p-4 fs-6"><%= message.complaint_id %></td>
              <td class="p-4 fs-6"><%= message.statement %></td>
              <td class="p-4 fs-6"><%= message.dateTime %></td>
              <% if @message && @message.message_type=="User" %>
                <td class="p-4 fs-6"><%= message.status.status %></td>
              <% end %>
              <td class="p-4 fs-6"><%= link_to 'Show', message %></td>
              <td class="p-4 fs-6"><%= link_to 'Edit', edit_message_path(message) %></td>
              <td class="p-4 fs-6"><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <div>
</div>